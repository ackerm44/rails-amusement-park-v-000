<h1>Tell us about yourself</h1>
<hr>

<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br>
  <%= f.label :tickets, "How many dollars are in you wallet?" %><br>
  <%= f.number_field :tickets %><br><br>
  <%= f.label :nausea, "How nauseous are you on a scale of 1-10?" %><br>
  <%= f.number_field :nausea %><br><br>
  <%= f.label :happiness, "What is your happiness on a scale of 1 - 10?" %><br>
  <%= f.number_field :happiness %><br><br>
  <%= f.label :height, "Height in inches" %><br>
  <%= f.number_field :height %><br><br>
  <%= f.label :admin, "Do you have admin responsbilities? " %>
  <%= f.check_box :admin %><br><br><br>

  <%= f.submit %>
<% end %>
